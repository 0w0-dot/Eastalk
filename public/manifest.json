{
  "name": "Eastalk",
  "short_name": "Eastalk",
  "description": "실시간 채팅 애플리케이션",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#007bff",
  "orientation": "portrait-primary",
  "scope": "/",
  "lang": "ko",
  "dir": "ltr",
  "categories": ["social", "communication"],
  "icons": [
    {
      "src": "/favicon.ico",
      "sizes": "64x64 32x32 24x24 16x16",
      "type": "image/x-icon",
      "purpose": "any maskable"
    },
    {
      "src": "/favicon.ico",
      "sizes": "192x192",
      "type": "image/x-icon",
      "purpose": "any"
    },
    {
      "src": "/favicon.ico",
      "sizes": "512x512",
      "type": "image/x-icon",
      "purpose": "any"
    }
  ],
  "screenshots": [
    {
      "src": "/favicon.ico",
      "type": "image/x-icon",
      "sizes": "320x568",
      "form_factor": "narrow"
    }
  ],
  "permissions": [
    "notifications"
  ],
  "features": [
    "Web Push",
    "Background Sync",
    "Cross Platform"
  ],
  "shortcuts": [
    {
      "name": "새 메시지",
      "short_name": "메시지",
      "description": "새 메시지 작성",
      "url": "/?shortcut=new-message",
      "icons": [
        {
          "src": "/favicon.ico",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "handle_links": "preferred",
  "protocol_handlers": [
    {
      "protocol": "web+eastalk",
      "url": "/?protocol=%s"
    }
  ],
  "share_target": {
    "action": "/",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  }
}